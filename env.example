# ===============================================
# TERSA FORK - Configuration Locale
# Copier ce fichier vers .env.local
# ===============================================

# ===============================================
# BASE DE DONNÉES LOCALE
# ===============================================
# Option 1: PostgreSQL local
POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/tersafork"

# Option 2: SQLite (décommenter si vous préférez SQLite)
# DATABASE_URL="file:./local.db"

# ===============================================
# STOCKAGE LOCAL
# ===============================================
# Chemin absolu où seront stockés les assets générés (images, vidéos, audio)
# Recommandé : mettre ce dossier en dehors du projet (ignoré par Git, synchro Google Drive/iCloud)
LOCAL_STORAGE_PATH="/Users/VOTRE_USER/Documents/tersa-storage"

# ===============================================
# BATCH PROCESSING
# ===============================================
# Nombre maximum de runs en parallèle
BATCH_MAX_CONCURRENCY=10

# Timeout par requête (en ms)
BATCH_REQUEST_TIMEOUT=300000

# ===============================================
# APIS IA - WAVESPEED / FAL
# ===============================================
FAL_API_KEY="your_fal_api_key"
WAVESPEED_API_KEY="your_wavespeed_api_key"

# ===============================================
# APIS IA - UPSCALERS
# ===============================================
# Lupa AI Upscaler (requiert plan BUSINESS)
# Obtenir la clé: https://app.lupaupscaler.com/profile
LUPA_API_KEY="your_lupa_api_key"

# Enhancor.ai (API non publique, contacter le support)
# ENHANCOR_API_KEY=""

# ===============================================
# APIS IA - MODÈLES VIDÉO
# ===============================================
# Kling via WaveSpeed/Fal
KLING_API_KEY="your_kling_api_key"

# Pixverse
PIXVERSE_API_KEY="your_pixverse_api_key"

# ===============================================
# APIS IA - MODÈLES IMAGE
# ===============================================
# OpenAI (DALL-E, GPT-4o)
OPENAI_API_KEY="sk-your_openai_key"

# Seedream / Nano Banana Pro (via Fal)
# Utilise FAL_API_KEY ci-dessus

# Black Forest Labs (Flux)
BF_API_KEY="your_bf_api_key"

# ===============================================
# APIS IA - AUTRES (OPTIONNEL)
# ===============================================
# xAI (Grok)
XAI_API_KEY="xai-your_key"

# AWS Bedrock
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

# Runway
RUNWAYML_API_SECRET="key_your_runway_key"

# Luma
LUMA_API_KEY="luma-your_key"

# Minimax
MINIMAX_GROUP_ID=""
MINIMAX_API_KEY=""

# Hume (voix)
HUME_API_KEY=""

# LMNT (voix)
LMNT_API_KEY=""

# ===============================================
# MODE LOCAL - DÉSACTIVER LES SERVICES EXTERNES
# ===============================================
# Mettre sur true pour désactiver l'auth (mode local uniquement)
LOCAL_MODE=true

# Pour le frontend - débloque tous les modèles
NEXT_PUBLIC_LOCAL_MODE=true

# User ID local (utilisé quand LOCAL_MODE=true)
LOCAL_USER_ID="local-user-001"

# ===============================================
# OPTIONNEL - SERVICES EXTERNES (désactivés en mode local)
# ===============================================
# Stripe (paiements) - pas nécessaire en local
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""

# Resend (emails) - pas nécessaire en local
# RESEND_TOKEN=""
# RESEND_EMAIL=""

# Upstash Redis (rate limiting) - pas nécessaire en local
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

# PostHog (analytics) - pas nécessaire en local
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST=""

# Turnstile (captcha) - pas nécessaire en local
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=""

# Supabase - pas nécessaire en mode local
# NEXT_PUBLIC_SUPABASE_URL=""
# NEXT_PUBLIC_SUPABASE_ANON_KEY=""
# SUPABASE_SERVICE_ROLE_KEY=""
# SUPABASE_AUTH_HOOK_SECRET=""

